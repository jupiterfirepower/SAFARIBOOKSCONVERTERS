{
  "manifest_version": 2,

  "name": "Safari Books Download",
  "description": "Download the books into mhtml files. Safaribooks subscription Required. Works only on www.safaribooksonline.com domain.",
  "version": "1.5",

  "background": {
    "scripts": ["bluebird.js", "jszip.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup" : "popup.html",
    "default_title": "Save current book!"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "pageCapture",
    "downloads",
    "*://*.safaribooksonline.com/*"
  ]
}
